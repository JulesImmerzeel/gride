@{
    ViewData["Title"] = "Index";
    string day = "";
    string start = "";
    int week = 1;
    if (ViewBag.week != null)
    {
        week = ViewBag.week;
    }
    else
    {
        week = DateTime.Now.DayOfYear / 7;
    }
    int next = (week + 1) % 52;
    int previous = week - 1;
    if (previous < 0) { previous = 51; }
    week++;
}

<h1>Week @week</h1>

<div class="row">
    <div class="col-12">
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    </div>
</div>

<partial name="/Views/Shared/_Schedule.cshtml" />
<table class="table">
    <thead>
        <tr>
            <th>
                Day
            </th>
            <th>
                Start
            </th>
            <th>
                End
            </th>
            <th>
                Weekly
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model._availabilities)
        {
            <tr>
                <td>
                    @{
                        start = item.Start.DayOfWeek.ToString();
                        if (day != start)
                        {
                            day = start;
                            <text>@day</text>
                        }
                    }
                </td>
                <td>
                    @item.Start.TimeOfDay
                </td>
                <td>
                    @item.End.TimeOfDay
                </td>
                <td>
                    @item.Weekly
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AvailabilityID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.AvailabilityID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
