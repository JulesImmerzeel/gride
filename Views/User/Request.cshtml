@model Gride.Models.Employee

@{
    ViewData["Title"] = "Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string value = Context.Request.Path.Value.Split("/").Last();
}

<h1>Edit personal details</h1>

<h4>Request change to @value </h4>
<hr />
<div class="row">

    <form asp-action="mail">
        <input type="hidden" for="ïtemName" class="form-control" value="@value" />
        @switch (value)
        {
            case "Name":
                <div class="form-group">
                    <label asp-for="Name" class="control-label">@value</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                break;
            case "LastName":
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">@value</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                break;
            case "Experience":
                <div class="form-group">
                    <label asp-for="Experience" class="control-label">@value</label>
                    <input asp-for="Experience" class="form-control" />
                    <span asp-validation-for="Experience" class="text-danger"></span>
                </div>
                break;
            default:
                <div class="form-group">
                    <label for="Other" class="control-label">@value</label>
                    <input for="Other" class="form-control" />
                </div>
                break;
        }
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}