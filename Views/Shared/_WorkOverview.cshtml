@using System.Globalization;

<hr />
<h2>Hours worked</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Month</th>
            <th>Hours worked</th>
        </tr>
    </thead>
    @for (int i = 1; i <= 12; i++)
    {
        <tr>
            <td>@CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</td>
            <td>0</td>
        </tr>
    }

    <tr class="table-danger">
        <td>Total</td>
        <td>0</td>
    </tr>
</table>
