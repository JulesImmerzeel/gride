@model IEnumerable<Gride.Models.Work>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Overtime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shift)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Overtime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shift.ShiftID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorkID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WorkID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WorkID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
